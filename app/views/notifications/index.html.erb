<div class="container">
	<div class="row box">
		<div class="col-md-12 col-sm-12 col-xs-12">
		   	<h2 class="font_img">通知</h2>
	    </div>
	    <div class="col-md-12 col-sm-12 col-xs-12">
			<%= link_to notifications_destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか？" do %>
		        <i class="fas fa-trash" style="color: black;"></i>
		        <h7 style="color: black;">全削除</h7>
	        <% end %>
			<% if @notifications.exists? %>
			    <div class="users-index">
			        <%= render @notifications %>
			    </div>
			<% else %>
			    <p>通知はありません</p>
			<% end %>
	    </div>
    </div>
</div>