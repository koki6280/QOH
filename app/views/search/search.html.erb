<div class="comtainer" style="margin-top: 100px; margin-left: 100px;">
	<div class="row">
      <% if @model == 'user' %>
      <div class="col-md-10 col-xs-12">
      	<h2><%= @datas.count %>人のユーザーが見つかりました！</h2><%= paginate @datas %>
      </div>
      <div class="col-md-10 col-xs-12">
	      <div class="box">
		      <table class="table table-striped">
			      	<thead>
			         <tr>
			            <th>アイコン</th>
			            <th>ユーザー</th>
			            <th>プロフィール</th>
			            <th></th>
			         </tr>
			        </thead>
				    <tbody>
				        <% @datas.each do |user| %>
				          <tr>
				             <td><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "noimage.png", size: '100x100', class: "appli_img") %></td>
				             <td><%= user.nickname%></td>
				             <td><%= user.profile %></td>
				             <td><%= link_to '詳細', user_path(user), method: :get, class: "btn btn-primary" %></td>
				           </tr>
				          <% end %>
				    </tbody>
		       </table>
	      </div>
      </div>
      <% else @model == 'diary' %>
    <div class="col-md-12 col-xs-12">
		<h2><%= @datas.count %>件の投稿が見つかりました！</h2><%= paginate @datas %>
	</div>
	  <div class="col-md-12 col-xs-12">
			<% @datas.each do |diary| %>
			<div class="col-md-4 col-xs-12">
				<div class="box">
					<div class="index_lists">
					  <p class="show_back" style="font-size: 20px; padding-left: 60px;"><%= diary.user.nickname %>の投稿</p><br>
					  <p><%= link_to diary_path(diary) do %>
						 <%= attachment_image_tag(diary, :body_image, :fill, 200, 200, fallback: "diary_no.png", size: '200x200', class: 'appli_img3 index_img') %>
						 <% end %></p><br>
					  <p><%= link_to diary_path(diary) do %>
					  <span class="diary_point">コメントする</span>
					     <% end %></p><br>
					  <p class="tag_area" style="padding-left: 60px;"><%= render 'diaries/tag_list', tag_list: diary.tag_list %></p>
					  <p class="show_back" style="padding-left: 60px;">投稿日　<%= diary.created_at.strftime('%Y/%m/%d') %></p>
				    </div>
				</div>
			</div>
					<% end %>
		</div>
		</div>
      <% end %>
	</div>
</div>