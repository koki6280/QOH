<div class="comtainer" style="margin-top: 100px; margin-left: 100px;">
	<div class="row">
      <% if @model == 'user' %>
      <div class="col-xs-10">
      	<h2><%= @datas.count %>人のユーザーが見つかりました！</h2>
      <div class="box">
      <table class="table table-striped">
	      	<thead>
	         <tr>
	            <th>アイコン</th>
	            <th>ユーザー</th>
	            <th>プロフィール</th>
	            <th></th>
	         </tr>
	       </thead>
		   <tbody>
		        <% @datas.each do |user| %>
		          <tr>
		             <td><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "noimage.png", size: '100x100', class: "appli_img") %></td>
		             <td><%= user.nickname%></td>
		             <td><%= user.profile %></td>
		             <td><%= link_to '詳細', user_path(user), method: :get, class: "btn btn-primary" %></td>
		           </tr>
		          <% end %>
		    </tbody>
       </table>
      </div>
      </div>
      <% else @model == 'diary' %>
      <div class="col-xs-12">
		<h2><%= @datas.count %>件の投稿が見つかりました！</h2>
			<% @datas.each do |diary| %>
			<div class="col-xs-4">
				<div class="box">
					<div class="index_lists">
					  <p><%= diary.user.nickname %>の投稿</p><br>
					  <p><%= link_to diary_path(diary) do %>
						 <%= attachment_image_tag(diary, :body_image, :fill, 200, 200, fallback: "no_image.jpg", size: '200x200', class: 'appli_img2') %>
						 <% end %></p><br>
					  <p><%= link_to diary_path(diary) do %>
					  <span style="background-color: #cde4ff;">コメントする</span>
					     <% end %></p><br>
					  <p class="tag_area"><%= render 'diaries/tag_list', tag_list: diary.tag_list %></p>
					  <p>投稿日　<%= diary.created_at.strftime('%Y/%m/%d') %></p>
				    </div>
				</div>
			</div>
					<% end %>
		</div>
		</div>
      <% end %>
	</div>
</div>