<div class="container" style="margin-top: 100px;">
	<div class="row">
<table class="table">
	<thead>
		<tr>
			<th>メディア</th>
			<th>ネーム</th>
			<th>投稿内容</th>
			<th>運動時間</th>
			<th>睡眠時間</th>
			<th>喫煙本数</th>
			<th>飲酒量</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<tr>
		<td><%= link_to user_path(@diary.user) do %>
            <%= attachment_image_tag(@diary, :body_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
			<% end %>
		<td><%= @diary.user.nickname %></td>
		<td><%= @diary.body %></td>
		<td><%= @diary.exercise %>時間</td>
		<td><%= @diary.sleep %>時間</td>
		<td><%= @diary.cigarette %>本</td>
		<td><%= @diary.drinking %></td>
		<td><%= link_to "編集する", edit_diary_path(@diary), method: :get, class: "btn btn-primary"%>
		<%= link_to "削除", diary_path(@diary), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
		</td>
	</tr>
    </tbody>
</table>

<table>
      <% @comments.each do |comment| %>
        <tr>
          <td class="show-comment">
            <%= link_to user_path(comment.user), class: "user_#{comment.user.id}" do %>
              <%= attachment_image_tag comment.user, :profile_image, fallback: "no_image.jpg", size: "50x50" %><br>
              <%= comment.user.name %>
            <% end %>
          </td>
          <td class="show-comment"><%= comment.comment %></td>
          <% if current_user == comment.user %>
            <td><%= link_to 'Destroy', diary_comment_path(@diary, comment), class: 'btn-sm btn-danger', method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
</table>

	<%= form_for [@diary, @comment] do |f| %>
	  <%= f.text_area :comment, size: "90x5" %>
	  <%= f.submit '送信', class: "btn-sm btn-primary" %>
	<% end %>

</div>
</div>