<div class="container" style="margin-top: 100px;">
    <div class="row">
		<div class="col-xs-12">
				<h2>投稿一覧</h2>
				<% @diaries.each do |diary| %>
					<div class="col-xs-4">
						<div class="box">
							<div class="index_lists">
									<p><%= diary.user.nickname %>の日記</p><br>
									<p><%= link_to diary_path(diary) do %>
									<%= attachment_image_tag(diary, :body_image, :fill, 200, 200, fallback: "no_image.jpg", class: "appli_img2") %>
									<% end %></p><br>
									<p><%= link_to diary_path(diary) do %>
										<span style="background-color: #cde4ff;">コメントする</span>
									   <% end %></p><br>
									<p class="tag_area"><%= render 'diaries/tag_list', tag_list: diary.tag_list %></p>
									<p>投稿日　<%= diary.created_at.strftime('%Y/%m/%d') %></p>
						    </div>
						</div>
					</div>
				<% end %>
				<%= paginate @diaries %>
		</div>
	</div>
</div>