<div class="container" style="margin-top: 100px;">
	<div class="row">
     <table class="table table-bordered">
			<thead>
				<tr>
					<th>タグ</th>
					<th>メディア</th>
					<th>投稿内容</th>
					<th>運動時間</th>
					<th>睡眠時間</th>
					<th>喫煙本数</th>
					<th>飲酒量</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @diaries.each do |diary| %>
				<tr>
					<td><%= render 'diaries/tag_list', tag_list: diary.tag_list %></td>
					<td><%= link_to diary_path(diary) do %>
						<%= attachment_image_tag(diary, :body_image, :fill, 50, 50, fallback: "no_image.jpg") %>
						<% end %>
					</td>
					<td><%= diary.body %></td>
					<td><%= diary.exercise %>時間</td>
					<td><%= diary.sleep %>時間</td>
					<td><%= diary.cigarette %>本</td>
					<td><%= diary.drinking %></td>
					<td>
                        <% if diary.favorited_by?(current_user) %>
	                        <%= link_to diary_favorites_path(diary), method: :delete do %>
	                        <span class="glyphicon glyphicon-heart"><%= diary.favorites.count%></span>
	                        <% end %>
                        <% else %>
	                        <%= link_to diary_favorites_path(diary), method: :post do %>
	                        <span class="glyphicon glyphicon-heart-empty"><%= diary.favorites.count %></span>
	                        <% end %>
                        <% end %>
                    </td>
					<td><%= link_to "編集する", edit_diary_path(diary), method: :get, class: "btn btn-primary"%>
						<%= link_to "削除", diary_path(diary), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>