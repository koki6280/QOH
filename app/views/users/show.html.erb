<div class="container" style="margin-top: 100px;">
	<div class="row">
		<div class="col-xs-3">
		<table class="table">
			<tr><%= attachment_image_tag @user, :profile_image, :fill, 180, 180, fallback: "noimage.png", size: "200x200", class: "appli_img" %></tr>
			<tr>
                <th>ユーザーネーム</th>
				<th><%= @user.nickname %></th>
			</tr>
			<tr>
			    <th>プロフィール</th>
				<th><%= @user.profile %></th>
			</tr>
		</table>
		<%= link_to 'プロフィール編集', edit_user_path(@user), class: "col-xs-12 btn btn-default edit_user_#{@user.id}" %>
		<%= link_to 'マイカレンダー', my_calendar_path(@user), class: "col-xs-12 btn btn-default" %>
	    </div>
	    <div class="col-xs-9">

		   <h2><%= @user.nickname %>の記録</h2>
				<% @diaries.each do |diary| %>
				<div class="col-xs-4">
					<div class="box">
						<div class="index_lists">
							<p><%= diary.user.nickname %>の投稿</p><br>
							<p><%= link_to diary_path(diary) do %>
							    <%= attachment_image_tag diary, :body_image, :fill, 150, 150, fallback: "no_image.jpg", class: "appli_img2" %>
							   <% end %></p><br>
							   <%= link_to diary_path(diary) do %>
								   <span style="background-color: #cde4ff;">コメントする</span>
							   <% end %><br>
							<p class="tag_area"><%= render 'diaries/tag_list', tag_list: diary.tag_list %></p>
							<p>投稿日　<%= diary.created_at.strftime('%Y/%m/%d') %></p>
				        </div>
				    </div>
				</div>
				<% end %>
	    </div>
	    <div class="col-xs-6">
	    	<div class="box">
		<%= high_chart('sample', @graph) %>
		<%= high_chart('sample', @graph2) %>
	        </div>
	    </div>
	    </div>
	</div>
</div>