<div class="container" style="margin-top: 100px;">
	<div class="row">
		<table class="table table-bordered">
			<tr>
				<th><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></th>
				<th><%= @user.nickname %></th>
				<th><%= @user.profile %></th>
			</tr>
		</table>
		<%= link_to '編集', edit_user_path(@user) %>
		<%= link_to 'マイカレンダー', my_calendar_path(@user) %>

		<table class="table table-bordered">
			<thead>
				<tr>
					<th>タグ</th>
					<th>メディア</th>
					<th>投稿内容</th>
					<th>運動時間</th>
					<th>睡眠時間</th>
					<th>喫煙本数</th>
					<th>飲酒量</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @diaries.each do |diary| %>
				<tr>
					<td><%= render 'diaries/tag_list', tag_list: diary.tag_list %></td>
					<td><%= attachment_image_tag(diary, :body_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
					<td><%= diary.body %></td>
					<td><%= diary.exercise %>時間</td>
					<td><%= diary.sleep %>時間</td>
					<td><%= diary.cigarette %>本</td>
					<td><%= diary.drinking %></td>
					<td><%= link_to "編集する", edit_diary_path(diary), method: :get, class: "btn btn-primary"%>
						<%= link_to "削除", diary_path(diary), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= high_chart('sample', @graph) %>
	</div>
</div>