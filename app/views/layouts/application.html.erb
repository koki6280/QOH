<!DOCTYPE html>
<html>
  <head>
    <title>QOH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
  </head>

  <body class="background">
    <header class="navbar navbar-fixed-top navbar-inverse" style="background-color: #90EE90;">
      <div class="container">
        <%= link_to home_about_path do %>
        <nav class="nav navbar-nav navbar-left">
          <span class="site_name">QOH<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></span><span style="color: #fff;">  quality~of~health</span>
        </nav>
        <% end %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li style="margin-top: 10px;"><%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag 'search[content]' %>
            <%= select_tag 'search[model]', options_for_select({ "ユーザー" => "user", "投稿一覧" => "diary"}) %>
            <%= submit_tag '検索' %>
            <% end %></li>
            <li><%= link_to 'マイページ', user_path(current_user), class: 'glyphicon glyphicon-home home' %></li>
            <li><%= link_to '新規投稿', new_diary_path, class: 'glyphicon glyphicon-user users', data: {"turbolinks" => false} %></li>
            <li><%= link_to '投稿一覧', diaries_path, class: 'glyphicon glyphicon-book books' %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
            <% else %>
            <li><%= link_to 'TOP', root_path, class: 'glyphicon glyphicon-home home' %></li>
            <li><%= link_to 'ABOUT', home_about_path, class: 'glyphicon glyphicon-link about' %></li>
            <li><%= link_to '会員登録', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
            <li><%= link_to 'ログイン', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
